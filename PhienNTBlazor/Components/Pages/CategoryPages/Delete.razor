@page "/categories/delete"
@using Models
@using Repository
@inject ICategoryRepo CategoryRepo
@inject NavigationManager NavigationManager

<PageTitle>Delete Category</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this category?</p>
<div>
    <h2>Category</h2>
    <hr />
    @if (category is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        @if (categoryInUse)
        {
            <div class="alert alert-danger">
                This category cannot be deleted because it is associated with one or more news articles.
            </div>
        }

        <dl class="row">
            <dt class="col-sm-2">Category Name</dt>
            <dd class="col-sm-10">@category.CategoryName</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@category.CategoryDesciption</dd>
            <dt class="col-sm-2">Parent Category</dt>
            <dd class="col-sm-10">@category.ParentCategoryId</dd>
            <dt class="col-sm-2">Is Active</dt>
            <dd class="col-sm-10">@(category.IsActive ? "Yes" : "No")</dd>
        </dl>
        <EditForm method="post" Model="category" OnValidSubmit="DeleteCategory" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(category is null || categoryInUse)">Delete</button> |
            <a href="/categories">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Category? category;
    private bool categoryInUse = false;

    [SupplyParameterFromQuery]
    private int CategoryId { get; set; }

    protected override void OnInitialized()
    {
        category = CategoryRepo.GetCategoryById(CategoryId);

        if (category is null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        // Check if category is used in articles
        categoryInUse = CategoryRepo.IsCategoryUsedInArticles(CategoryId);
    }

    private void DeleteCategory()
    {
        if (category != null && !categoryInUse)
        {
            CategoryRepo.DeleteCategory(category.CategoryId);
            NavigationManager.NavigateTo("/categories");
        }
    }
}