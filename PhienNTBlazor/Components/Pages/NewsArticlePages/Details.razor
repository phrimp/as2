@page "/newsarticles/details"
@using Models
@using Repository
@inject INewsArticleRepo NewsArticleRepo
@inject ITagRepo TagRepo
@inject NavigationManager NavigationManager

<PageTitle>News Article Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>News Article</h2>
    <hr />
    @if (newsArticle is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">NewsTitle</dt>
            <dd class="col-sm-10">@newsArticle.NewsTitle</dd>
            <dt class="col-sm-2">Headline</dt>
            <dd class="col-sm-10">@newsArticle.Headline</dd>
            <dt class="col-sm-2">CreatedDate</dt>
            <dd class="col-sm-10">@newsArticle.CreatedDate</dd>
            <dt class="col-sm-2">NewsContent</dt>
            <dd class="col-sm-10">@newsArticle.NewsContent</dd>
            <dt class="col-sm-2">NewsSource</dt>
            <dd class="col-sm-10">@newsArticle.NewsSource</dd>
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@newsArticle.Category?.CategoryName</dd>
            <dt class="col-sm-2">NewsStatus</dt>
            <dd class="col-sm-10">@newsArticle.NewsStatus</dd>
            <dt class="col-sm-2">Created By</dt>
            <dd class="col-sm-10">@newsArticle.CreatedBy?.AccountName</dd>
            <dt class="col-sm-2">Updated By</dt>
            <dd class="col-sm-10">@(newsArticle.UpdatedBy?.AccountName ?? "Not updated yet")</dd>
            <dt class="col-sm-2">ModifiedDate</dt>
            <dd class="col-sm-10">@(newsArticle.ModifiedDate.HasValue ? newsArticle.ModifiedDate.Value.ToString() : "Not modified yet")</dd>
            <dt class="col-sm-2">Tags</dt>
            <dd class="col-sm-10">
                @if (tags != null && tags.Any())
                {
                    @string.Join(", ", tags.Select(t => t.TagName))
                }
                else
                {
                    <span>No tags</span>
                }
            </dd>
        </dl>
        <div>
            <a href="@($"/newsarticles/edit?newsarticleid={newsArticle.NewsArticleId}")">Edit</a> |
            <a href="/newsarticles">Back to List</a>
        </div>
    }
</div>

@code {
    private NewsArticle? newsArticle;
    private IEnumerable<Tag>? tags;

    [SupplyParameterFromQuery]
    private int NewsArticleId { get; set; }

    protected override void OnInitialized()
    {
        newsArticle = NewsArticleRepo.GetNewsArticleById(NewsArticleId);

        if (newsArticle is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
        else
        {
            tags = TagRepo.GetTagsByArticleId(NewsArticleId);
        }
    }
}